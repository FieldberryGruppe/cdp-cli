{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "allowJs": false,
    "declaration": true,
    "emitBOM":  true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./built",
    "baseUrl": ".",
    "paths": {
      "cdp-lib": [
        "./submodules/cdp-lib/dist/cdp-lib"
      ]
    },
    "rootDirs": [
      "submodules/cdp-lib/dist"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./submodules/cdp-lib/dist/@types"
    ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "built",
    "submodules",
    "tests"
  ]
}
