{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "allowJs": false,
    "declaration": true,
    "emitBOM":  true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./built",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/cdp-lib/dist/@types"
    ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "built",
    "submodules",
    "tests"
  ]
}
