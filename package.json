{
  "name": "cdp-cli",
  "version": "0.0.1",
  "description": "CDP Command Line Interface",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:ts": "tsc && webpack",
    "prebuild:ts": "node ./tasks/build-pre.js",
    "postbuild:ts": "node ./tasks/build-post.js",
    "test": "run-s lint unit-test",
    "pretest": "tsc -p ./tests/jasmine/tsconfig.json",
    "posttest": "cd ./docs/reports/coverage/_org && remap-istanbul -i coverage.json -o ../ -t html",
    "clean": "node ./tasks/clean.js",
    "depends": "npm list --depth=0",
    "depends:prod": "npm list --depth=0 --only=prod",
    "depends:dev": "npm list --depth=0 --only=dev",
    "lint": "run-s -l lint:*",
    "lint:js": "eslint tasks/**/*.js built/**/*.js -c tests/eslint/eslintrc.json",
    "lint:ts": "tslint --type-check -p ./tsconfig.json -c ./tests/tslint/tslint.json 'src/**/*.ts'",
    "unit-test": "istanbul cover ./node_modules/jasmine-node/bin/jasmine-node tests/jasmine/ --dir docs/reports/coverage/_org -x submodules/**",
    "document": "typedoc --out docs/typedoc/ src/",
    "metrics": "plato -r -d docs/reports/metrics -e ./tests/eslint/eslintrc.json built/*.js",
    "ci": "run-s build test",
    "deploy": "run-s -l clean build test metrics document",
    "debug": "node --inspect --debug-brk ./node_modules/jasmine-node/bin/jasmine-node tests/jasmine/",
    "debug:tool": "node-debug ./node_modules/jasmine-node/bin/jasmine-node tests/jasmine/",
    "submodule": "node ./tasks/submodule.js",
    "update": "npm update --save && npm update --save-dev && npm run deploy"
  },
  "bin": {
    "cdp": "bin/cdp"
  },
  "files": [
    "bin",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CDP-Tokyo/cdp-cli.git"
  },
  "keywords": [
    "CDP",
    "cli",
    "cordova",
    "electron",
    "TypeScript"
  ],
  "author": "Shin Ogata",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/CDP-Tokyo/cdp-cli/issues"
  },
  "homepage": "https://github.com/CDP-Tokyo/cdp-cli#readme",
  "dependencies": {
    "jsdom": "^9.12.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.9.0",
    "@types/fs-extra": "^2.1.0",
    "@types/glob": "^5.0.30",
    "@types/inquirer": "0.0.33",
    "@types/jasmine": "^2.5.47",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.63",
    "@types/node": "^7.0.13",
    "@types/underscore.string": "0.0.30",
    "@types/uuid": "^2.0.29",
    "@types/which": "^1.0.28",
    "chalk": "^1.1.3",
    "cli-spinner": "^0.2.6",
    "commander": "^2.9.0",
    "convert-source-map": "^1.5.0",
    "dts-bundle": "^0.7.2",
    "eslint": "^3.19.0",
    "fs-extra": "^2.1.2",
    "glob": "^7.1.1",
    "hogan.js": "^3.0.2",
    "inquirer": "^3.0.6",
    "jasmine-node": "^2.0.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.0.2",
    "plato": "^1.7.0",
    "remap-istanbul": "^0.9.5",
    "semver-regex": "^1.0.0",
    "source-map": "^0.5.6",
    "source-map-loader": "^0.2.1",
    "tslint": "^5.1.0",
    "typedoc": "^0.6.0",
    "typescript": "^2.3.0",
    "typescript-formatter": "^5.1.3",
    "underscore.string": "^3.3.4",
    "uuid": "^3.0.1",
    "webpack": "^2.4.1",
    "which": "^1.2.14",
    "xmldom": "^0.1.27"
  }
}
